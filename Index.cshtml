@model IEnumerable<InventoryManagement.Models.Product>

<div class="container">
    <h2>Inventory Management</h2>
    <a asp-action="Create" class="btn btn-primary">Add New Product</a>
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Category</th>
                <th>Supplier</th>
                <th>Stock Level</th>
                <th>Reorder Point</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Category</td>
                    <td>@item.Supplier</td>
                    <td>@item.StockLevel</td>
                    <td>@item.ReorderPoint</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ProductID" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.ProductID" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
